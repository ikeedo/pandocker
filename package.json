{
  "name": "pandocker",
  "version": "0.0.4",
  "description": "Pandoc auto convert to pdf with npm-watch as entrypoint",
  "watch": {
    "index": {
      "patterns": [
        "./data/index.md"
      ],
      "extensions": "md"
    }
  },
  "scripts": {
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-watch index",
    "index": "npm run eisvogel && npm run academic",
    "eisvogel": "pandoc ./data/index.md --number-sections -V lang=de --listings --citeproc --pdf-engine=xelatex --filter mermaid-filter --template=eisvogel --output=./data/eisvogel.pdf",
    "academic": "pandoc ./resources/metadata.yml ./data/index.md --number-sections -V lang=de --listings --citeproc --pdf-engine=xelatex --to=latex --output=./data/academic.pdf",
    "leaflet": "pandoc ./data/index.md -V lang=de --listings --citeproc --pdf-engine=xelatex --template=leaflet --output=./data/leaflet.pdf",
    "letter": "pandoc ./data/index.md -V lang=de --template=letter --output=./data/letter.pdf"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "husky": "^6.0.0",
    "standard-version": "^9.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/schoolcraftteam/pandocker.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/schoolcraftteam/pandocker#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ],
    "commitUrlFormat": "https://bitbucket.org/schoolcraftteam/pandocker/commits/{{hash}}",
    "compareUrlFormat": "https://bitbucket.org/schoolcraftteam/pandocker/branches/compare/{{previousTag}}..{{currentTag}}"
  }
}
